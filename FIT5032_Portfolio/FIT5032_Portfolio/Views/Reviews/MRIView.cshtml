@model IEnumerable<FIT5032_Portfolio.Models.Review>

@{
    ViewBag.Title = "MRI View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<h2 id="title">View All Reviews</h2>

@if (Model.Any())
{
    <p>Average Rating for all MRI Service Providers: @Model.Average(model => model.Rating)</p>
}

<div>
    <h5 align="center">Average Rating for different MRI Service Providers</h5>
    <canvas id="myChart"></canvas>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MRIServiceProvider.Name)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.Raw(item.Comment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MRIServiceProvider.Name)
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {

    @Scripts.Render("~/Scripts/DataTables/jquery.dataTables.js")
    @Scripts.Render("~/Scripts/DataTables/dataTables.bootstrap.js")
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />

    <script>
        $(document).ready(function () {
            $('.table').DataTable();
        });
    </script>

    <script>
    const ctx = document.getElementById('myChart');

    var labels = @Html.Raw(ViewBag.ChartLabels);
    var data = @Html.Raw(ViewBag.ChartData);

    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'Average Rating',
                data: data,
            }]
        }
    });
    </script>
}