@model FIT5032_Portfolio.Models.Appointment

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 id="title">@ViewBag.Title</h2>

@if (@ViewBag.Result != null)
{
    <div class="alert alert-info">@ViewBag.Result</div>
}

<section class="link">
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
    <div>
        @Html.ActionLink("Back to Calendar", "Calendar")
    </div>
</section>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br />
        <h4>Appointment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p></p>
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
            <p>Appointments are available from the next day.</p>
            <div class="col-md-10">
                <input type="date" name="Date" id="appointmentdate" required />

                <script>
                    var date = new Date();
                    date.setDate(date.getDate() + 1);
                    var tomorrow = date.toISOString().split('T')[0];
                    document.getElementById('appointmentdate').min = tomorrow;
                    var date = moment(document.getElementById('appointmentdate').value()).format(ýyyy - MM - dd);
                    document.getElementById('appointmentdate').value() = date;
                </script>

                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p></p>
            @Html.LabelFor(model => model.Time, htmlAttributes: new { @class = "control-label col-md-2" })
            <p>Office Hour: 09:00 - 18:00 <br />Interval: 30 mins</p>
            <div class="col-md-10">
                <input type="time" name="Time" id="appointmenttime" min="09:00" max="18:00" step="1800" required />

                @Html.ValidationMessageFor(model => model.Time, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p></p>
            @Html.LabelFor(model => model.MriId, "MRI Service Provider", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MriId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MriId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p></p>
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-outline-dark" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
